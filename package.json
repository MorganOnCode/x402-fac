{
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@rolldown/binding-darwin-arm64",
      "unrs-resolver"
    ],
    "overrides": {
      "libsodium-wrappers-sumo": "0.8.2"
    }
  },
  "name": "x402-fac",
  "version": "1.0.0",
  "description": "x402 payment facilitator for Cardano with file storage service",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch --inspect src/index.ts",
    "build": "tsup",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky"
  },
  "keywords": [
    "x402",
    "cardano",
    "payment",
    "facilitator"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.1",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^6.1.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/error": "^4.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@lucid-evolution/lucid": "^0.4.29",
    "@lucid-evolution/provider": "^0.1.90",
    "@sentry/node": "^10.38.0",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.9.2",
    "pino": "^10.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
